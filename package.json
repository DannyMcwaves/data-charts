{
    "name": "electron-react-typescript",
    "version": "0.0.1",
    "description": "",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "NODE_ENV=production webpack --config webpack.main.config.js",
        "build-renderer": "NODE_ENV=production webpack --config webpack.renderer.config.js",
        "build": "npm run build-main && npm run build-renderer",
        "renderer-dev": "NODE_ENV=development webpack-dev-server --config webpack.renderer.dev.config.js",
        "main-dev": "NODE_ENV=development webpack --config webpack.main.config.js && electron ./dist/main.js",
        "prestart": "npm run build",
        "start": "electron .",
        "lint": "tslint 'src/**/*.{ts,tsx}' --project ./tsconfig.json",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "src/**/*.{js,ts,tsx,json,css,scss,md}": [
            "prettier --config ./.prettierrc --write",
            "git add"
        ],
        "src/**/*.{js,ts,tsx}": [
            "tslint --project ./tsconfig.json --fix",
            "git add"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/test/.*(\\.|/)test)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./mocks/fileMock.js",
            "\\.(s?css|sass)$": "./mocks/styleMock.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/Robin_f/electron-react-typescript.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/Robin_f/electron-react-typescript/issues"
    },
    "homepage": "https://gitlab.com/Robin_f/electron-react-typescript#README",
    "devDependencies": {
        "@types/electron-devtools-installer": "^2.0.2",
        "@types/jest": "^21.1.9",
        "@types/react": "^16.0.31",
        "@types/react-dom": "^16.0.3",
        "@types/react-hot-loader": "^3.0.5",
        "@types/react-redux": "^5.0.14",
        "@types/react-test-renderer": "^16.0.0",
        "@types/webpack-env": "^1.13.3",
        "awesome-typescript-loader": "^3.4.1",
        "electron": "^1.7.10",
        "electron-devtools-installer": "^2.2.3",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^22.0.4",
        "prettier": "^1.9.2",
        "react-hot-loader": "^3.1.3",
        "react-test-renderer": "^16.2.0",
        "redux-devtools-extension": "^2.13.2",
        "source-map-loader": "^0.2.3",
        "ts-jest": "^22.0.0",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "tslint-config-prettier": "^1.6.0",
        "tslint-react": "^3.2.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.7",
        "webpack-merge": "^4.1.1"
    },
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2"
    }
}
