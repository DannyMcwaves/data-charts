{
    "name": "electron-react-typescript",
    "version": "0.0.1",
    "description": "",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "NODE_ENV=production webpack --config webpack.main.config.js",
        "build-renderer": "NODE_ENV=production webpack --config webpack.renderer.config.js",
        "build": "npm run build-main && npm run build-renderer",
        "renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
        "main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
        "prestart": "npm run build",
        "start": "electron .",
        "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
        "precommit": "lint-staged",
        "test": "jest",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
            "prettier --config ./.prettierrc --write",
            "git add"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "tslint --project ./tsconfig.json --fix",
            "git add"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/test/.*(\\.|/)test)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
            "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
        }
    },
    "build": {
        "productName": "ProductName",
        "appId": "org.your.productname",
        "mac": {
            "category": "your.app.category.type"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/Robin_f/electron-react-typescript.git"
    },
    "author": {
        "name": "Your name",
        "email": "Your email"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://gitlab.com/Robin_f/electron-react-typescript/issues"
    },
    "homepage": "https://gitlab.com/Robin_f/electron-react-typescript#README",
    "devDependencies": {
        "@types/electron-devtools-installer": "^2.0.2",
        "@types/jest": "^21.1.9",
        "@types/react": "^16.0.31",
        "@types/react-dom": "^16.0.3",
        "@types/react-hot-loader": "^3.0.5",
        "@types/react-redux": "^5.0.14",
        "@types/react-test-renderer": "^16.0.0",
        "@types/webpack-env": "^1.13.3",
        "awesome-typescript-loader": "^3.4.1",
        "css-loader": "^0.28.7",
        "electron": "^1.7.10",
        "electron-builder": "^19.49.2",
        "electron-devtools-installer": "^2.2.3",
        "file-loader": "^1.1.6",
        "html-webpack-plugin": "^2.30.1",
        "husky": "^0.14.3",
        "image-webpack-loader": "^3.4.2",
        "jest": "^22.0.4",
        "lint-staged": "^6.0.0",
        "node-sass": "^4.7.2",
        "prettier": "^1.9.2",
        "react-hot-loader": "^3.1.3",
        "react-test-renderer": "^16.2.0",
        "redux-devtools-extension": "^2.13.2",
        "sass-loader": "^6.0.6",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.19.1",
        "ts-jest": "^22.0.0",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "tslint-config-prettier": "^1.6.0",
        "tslint-react": "^3.2.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.7",
        "webpack-merge": "^4.1.1"
    },
    "dependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2"
    }
}
